<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-md-7 offset-md-3">
    <div class="card shadow">
      <h2 class="card-header text-center">Edit Campground</h2>
      <div class="card-body">
        <form class="validated-form" action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate
          enctype="multipart/form-data">
          <div class="form-group mb-3">
            <label class="form-label" for="title">Title</label>
            <!-- when data is sent it's stored under campgrounds -->
            <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title%>"
              required />
            <div class="valid-feedback">Yup - valid!</div>
          </div>
          <div class="form-group mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="campground[location]"
              value="<%=campground.location%>" required />
            <div class="valid-feedback">Yup - valid!</div>
          </div>

          <div class="mb-3">
            <label for="price" class="form-label">Campground Price</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="price-label">$</span>
              </div>
              <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                aria-describedby="price-label" name="campground[price]" value="<%=campground.price %>" required />
              <div class="valid-feedback">Yup - valid!</div>
            </div>
          </div>
          <div class="form-group mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" name="campground[description]" id="description" cols="30" rows="3"
              required><%=campground.description%></textarea>
            <div class="valid-feedback">Yup - valid!</div>
          </div>
          <div class="mb-3">
            <label class="mb-3" for="image" class="form-file-label">
              Please Upload Additional Images Below:
            </label>
            <input class="form-control" type="file" name="image" id="image" multiple />
          </div>
          <div class="mb-3">
            <% campground.images.forEach((img, i) => { %>
            <img class="img-thumbnail shadow" src="<%=img.thumbnail%>" alt="" />
            <div class="form-check-inline">
              <input class="btn-check" type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>"
                autocomplete="off" />
              <label class="btn btn-outline-danger check-box-hover-custom-off" for="image-<%=i%>">Delete</label>
            </div>
            <% })%>
          </div>
          <div class="mb-3">
            <button class="btn btn-info">Update Campground</button>
          </div>
        </form>
        <a href="/campgrounds/<%=campground._id%>">Back To Campground</a>
      </div>
    </div>
  </div>
</div>